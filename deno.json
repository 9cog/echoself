{
  "tasks": {
    "lint": "deno lint",
    "lint:fix": "deno lint --fix",
    "format": "deno fmt",
    "format:check": "deno fmt --check"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": [
        "no-sloppy-imports",
        "jsx-button-has-type",
        "no-window",
        "no-explicit-any",
        "require-await",
        "no-unused-vars"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  }
}
